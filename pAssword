import random
while True:
    massive = "0987654321qwertyuiop[]asdfghjklzxcvbnm"
    input('привет это программа для создания пароля (нажмите Enter чтобы продолжить)')
    ha = int(input('Укажите длинну пароля:'))
    name = input('(Имя будет всавленно в пароль)Как вас зовут?(Нажмите Enter чтобы пропустить)')
    d = ''


    for i in range(ha):
        d += random.choice(massive)

    print(d,name,sep="")
